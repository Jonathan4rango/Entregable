<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Entregable.Login">
    <ContentPage.Content>
       
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200" />
                    <RowDefinition Height="100" />
                    <RowDefinition Height="80" />
                    <RowDefinition Height="300" />
                </Grid.RowDefinitions>
         
       
            <Label Text="Login" HorizontalOptions="Center" Grid.Column="0" Grid.Row="0" />
            <Entry Placeholder="Usuario" Grid.Column="0" Grid.Row="1" x:Name="EnUser" VerticalOptions="Center" />
            <Entry Placeholder="Contraseña" Grid.Column="0" Grid.Row="2" x:Name="EnCont" VerticalOptions="Center"/>
            <Button  Text="Desea registrarse, da clik aqui" x:Name="Btn_Registro"
                     Clicked="Btn_Registro_Clicked" Grid.Column="0" 
                     Grid.Row="3" VerticalOptions="End"/>


        </Grid>
    </ContentPage.Content>
</ContentPage>