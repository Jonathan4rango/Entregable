<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Entregable.View.MenuCentral">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#F0EEED">


            <BoxView  BackgroundColor="#379237"
                      VerticalOptions="StartAndExpand"
                      HeightRequest="250"
                      CornerRadius="0,0,0,0"
                      />
            <Button Text="¿ Quieres logearte ?, da clik aqui!" Command="{Binding LoginCommand}" />
            <BoxView  BackgroundColor="#F2F2F2"
                      VerticalOptions="StartAndExpand"
                      HeightRequest="500"
                      CornerRadius="10,10,10,10"
                      Margin="10,0,10,90"
                      />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>